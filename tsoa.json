{
  "entryFile": "src/server.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "spec": {
    "securityDefinitions": {
      "Bearer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    },
    "outputDirectory": "public",
    "specVersion": 3,
    "spec": {
      "servers": [
        {
          "url": "http://localhost:4000/api/v1",
          "description": "Local development"
        }
      ]
    }
  },
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
